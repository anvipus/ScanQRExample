<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tv_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/MaterialTextViewRegularFont"
                    android:gravity="center"
                    android:layout_marginHorizontal="16dp"
                    android:textColor="@color/colorGondola"
                    android:textSize="16dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="SpUsage,TextSizeCheck" />

        <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_open_scan_qr_camera"
                style="@style/MaterialButtonGeneralStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="16dp"
                app:layout_constraintTop_toBottomOf="@+id/tv_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="Open Scan QR With ML Kit" />

        <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_open_scan_qr_camera_zxing"
                style="@style/MaterialButtonGeneralStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="16dp"
                app:layout_constraintTop_toBottomOf="@+id/btn_open_scan_qr_camera"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="Open Scan QR With Zxing" />

        <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_open_scan_qr_camera_compose"
                style="@style/MaterialButtonGeneralStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="16dp"
                app:layout_constraintTop_toBottomOf="@+id/btn_open_scan_qr_camera_zxing"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="Open Scan QR With ML Kit Compose" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
